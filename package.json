{
  "name": "ai-secretary-scheduler",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local",
    "dev:remote": "wrangler dev",
    "build": "tsc --noEmit && echo 'Build check passed'",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy",
    "db:create": "wrangler d1 create webapp-production",
    "db:migrate:local": "wrangler d1 migrations apply webapp-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply webapp-production",
    "db:seed:local": "wrangler d1 execute webapp-production --local --file=db/seeds/seed-admin-and-settings.sql",
    "db:seed:prod": "wrangler d1 execute webapp-production --file=db/seeds/seed-admin-and-settings.sql",
    "db:console:local": "wrangler d1 execute webapp-production --local",
    "db:console:prod": "wrangler d1 execute webapp-production",
    "db:reset:local": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed:local",
    "test:migrations": "tsx scripts/test-migrations.ts",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "hono": "^4.6.14",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.3",
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^7.3.0",
    "wrangler": "^4.54.0"
  }
}
